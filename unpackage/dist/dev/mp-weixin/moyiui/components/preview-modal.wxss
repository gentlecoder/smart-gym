.cu-modal .cu-preview {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  width: 100%;
  max-width: 100%;
  height: 100%;
}
.cu-modal .cu-preview .cu-preview-item .cu-preview-image {
  height: 100%;
  width: 100%;
  opacity: 0;
}
.cu-modal .cu-preview .cu-preview-item .cu-preview-img {
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center;
  width: 100%;
  height: 100%;
}
.cu-modal .cu-preview-bottom {
  position: absolute;
  color: #fff;
  bottom: 80rpx;
  text-align: center;
  width: 100%;
}
.cu-modal .cu-preview-bottom .cu-btn {
  background-origin: 200;
  background-color: rgba(80, 80, 80, 0.5);
}
.cu-modal .cu-preview-tips {
  position: absolute;
  color: #fff;
  bottom: 160rpx;
  text-align: center;
  width: 100%;
}

